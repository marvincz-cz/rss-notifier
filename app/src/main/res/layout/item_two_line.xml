<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="64dp">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_primary"
        android:layout_height="@dimen/icon_primary"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:layout_marginTop="@dimen/activity_vertical_padding"
        android:layout_marginBottom="@dimen/activity_vertical_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@drawable/ic_check"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:layout_marginEnd="@dimen/activity_horizontal_padding"
        android:layout_marginTop="@dimen/activity_vertical_padding"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/actionIcon"
        android:textAppearance="@style/TwoLineTitle"
        tools:text="Title" />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_padding"
        android:layout_marginEnd="@dimen/activity_horizontal_padding"
        android:layout_marginBottom="@dimen/activity_vertical_padding"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintEnd_toStartOf="@id/actionIcon"
        app:layout_constraintHorizontal_bias="0.0"
        android:textAppearance="@style/TwoLineText"
        tools:text="A slightly longer description" />

    <ImageView
        android:id="@+id/actionIcon"
        android:layout_width="@dimen/icon_action"
        android:layout_height="@dimen/icon_action"
        android:layout_marginEnd="@dimen/activity_horizontal_padding"
        android:layout_marginTop="@dimen/icon_padding"
        android:layout_marginBottom="@dimen/icon_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:tint="@color/textSecondary"
        android:tintMode="src_in"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@drawable/ic_check"/>

</androidx.constraintlayout.widget.ConstraintLayout>